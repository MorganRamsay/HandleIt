<Window x:Class="HandleIt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HandleIt"
        mc:Ignorable="d"
        Title="HandleIt" 
        Height="30" Width="100" 
        WindowStyle="None" 
        AllowsTransparency="True" 
        Background="Transparent" 
        ResizeMode="NoResize"
        ShowInTaskbar="False">
    <Window.ContextMenu>
        <ContextMenu>
            <MenuItem Header="Settings..." Click="Settings_Click"/>
            <Separator/>
            <MenuItem Header="Exit" Click="Exit_Click"/>
        </ContextMenu>
    </Window.ContextMenu>
    <Border Name="MainBorder" Background="White" BorderBrush="Black" BorderThickness="1" CornerRadius="4">
        <Label x:Name="HandleLabel" HorizontalAlignment="Center" VerticalAlignment="Center"
               Content="0" Foreground="Black" FontWeight="Bold" Padding="3" FontSize="12"/>
    </Border>
</Window>